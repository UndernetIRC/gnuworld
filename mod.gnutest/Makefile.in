# Default paths (system-wide installs)
# $Id: Makefile.in,v 1.4 2000/12/16 22:43:44 dan_karrels Exp $
#

# Standard defines
CXX = libtool @CXX@

SHLIB_CXX = libtool @SHLIB_CXX@
SHLIB_LD = libtool @SHLIB_LD@

DEFS = @DEFS@

CXXFLAGS = @CXXFLAGS@

BIN_PATH = @BIN_PATH@
LIB_PATH = @LIB_PATH@
LIBS = -L$(BIN_PATH)/.libs -lgnuworld

RM = @RM@
CP = @CP@
MV = @MV@
LN = @LN@
AR = @AR@
RANLIB = @RANLIB@

############ You shouldn't change anything below this line ###################

SHELL = /bin/sh

SRCS = gnutest.cc
OBJS = $(patsubst %.cc, %.o, $(SRCS))
OBJLIB = $(patsubst %.cc, %.lo, $(SRCS))
LIB = libgnutest.la

all: $(OBJS) $(LIB)
everything: all
make: all

%.o: %.cc
	$(SHLIB_CXX) $(CXXFLAGS) -c $< -o $@

$(LIB): $(OBJS)
	$(SHLIB_CXX) -module -export-dynamic -o $(LIB) $(OBJLIB) \
	-rpath $(BIN_PATH) $(LIBS)
	libtool install -c libgnutest.la $(BIN_PATH)/libgnutest.la

clean:
	$(RM) -f $(OBJS) $(LIB)

distclean: clean

depend: $(SRCS)
	$(CXX) $(CXXFLAGS) -MM $(SRCS) >> Makefile

