# Default paths (system-wide installs)

# Standard defines
BIN_PATH = @BIN_PATH@

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@

SHLIB_CXX = @SHLIB_CXX@
SHLIB_LD = @SHLIB_LD@

DEFS = @DEFS@
LIBS = @LIBS@

SHLIB_CXX = @MOD_CXX@
SHLIB_LD = @SHLIB_LD@

AR = @AR@
RANLIB = @RANLIB@

############ You shouldn't change anything below this line ###################

RM = @RM@
CP = @CP@
MV = @MV@

SHELL = /bin/sh

SRCS = Buffer.cc \
	ClientSocket.cc \
	EConfig.cc \
	ELog.cc \
	FileSocket.cc \
	misc.cc \
	Socket.cc \
	StringTokenizer.cc

#	EIOThread.cc
#	EReadThread.cc
#	EThread.cc
#	EWriteThread.cc
OBJS = $(patsubst %.cc, %.o, $(SRCS))
LIB = $(BIN_PATH)/libgnuworld.so

all: $(LIB)
everything: all
make: all

%.o: %.cc
	${SHLIB_CXX} ${CXXFLAGS} -c $< -o $@

$(LIB): ${OBJS}
	${SHLIB_LD} -o $(LIB) $(OBJS) $(LIBS)

clean:
	$(RM) -f $(OBJS) $(LIB)

distclean: clean

depend: $(SRCS)
	$(CXX) -MM $(CXXFLAGS) $(SRCS) >> Makefile

