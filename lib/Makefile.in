# Default paths (system-wide installs)

# Standard defines
BIN_PATH = @BIN_PATH@

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@

DEFS = @DEFS@
LIBS = @LIBS@

AR = @AR@
RANLIB = @RANLIB@

############ You shouldn't change anything below this line ###################

RM = @RM@
CP = @CP@
MV = @MV@

SHELL = /bin/sh

SRCS = Buffer.cc \
	ClientSocket.cc \
	EConfig.cc \
	ELog.cc \
	FileSocket.cc \
	misc.cc \
	Socket.cc \
	StringTokenizer.cc

OBJS = $(patsubst %.cc, %.o, $(SRCS))
LIB = $(BIN_PATH)/libgnuworld.a

all: $(LIB)
everything: all
make: all

%.o: %.cc
	${CXX} ${CXXFLAGS} -c $< -o $@

$(LIB): ${OBJS}
	$(AR) rv $(LIB) $(OBJS) $(LIBS)
	$(RANLIB) $(LIB)

clean:
	$(RM) -f $(OBJS) $(LIB)

distclean: clean

depend: $(SRCS)
	$(CXX) -MM $(CXXFLAGS) $(SRCS) >> Makefile

