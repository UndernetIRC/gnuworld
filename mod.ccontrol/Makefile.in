# Standard defines
CXX = @CXX@

SHLIB_CXX = @SHLIB_CXX@
SHLIB_LD = @SHLIB_LD@

DEFS = @DEFS@

CXXFLAGS = @CXXFLAGS@

BIN_PATH = @BIN_PATH@
LIB_PATH = @LIB_PATH@
LIBS = -L$(BIN_PATH) -lgnuworld

RM = @RM@
CP = @CP@
MV = @MV@
LN = @LN@
AR = @AR@
RANLIB = @RANLIB@

############ You shouldn't change anything below this line ###################

SHELL = /bin/sh

SRCS = ccontrol.cc \
	CControlCommands.cc
OBJS = $(patsubst %.cc, %.o, $(SRCS))
LIB = $(BIN_PATH)/libccontrol.so

all: $(OBJS) $(LIB)
everything: all
make: all

%.o: %.cc
	$(SHLIB_CXX) $(CXXFLAGS) -c $< -o $@

$(LIB): $(OBJS)
	$(SHLIB_LD) -o $(LIB) $(OBJS) $(LIBS)

clean:
	$(RM) -f $(OBJS) $(LIB)

distclean: clean

depend: $(SRCS)
	$(CXX) $(CXXFLAGS) -MM $(SRCS) >> Makefile

