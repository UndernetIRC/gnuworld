# Default paths (system-wide installs)
# $Id: Makefile.in,v 1.15 2000/12/10 17:06:28 dan_karrels Exp $
#

# Standard defines
CXX = @CXX@
SHLIB_CXX = @SHLIB_CXX@
SHLIB_LD = @SHLIB_LD@

DEFS = @DEFS@

CXXFLAGS = @CXXFLAGS@

BIN_PATH = @BIN_PATH@
LIB_PATH = @LIB_PATH@
LIBS = -L$(BIN_PATH) -lgnuworld @LIBS@

RM = @RM@
CP = @CP@
MV = @MV@
LN = @LN@
AR = @AR@
RANLIB = @RANLIB@

############ You shouldn't change anything below this line ###################

SHELL = /bin/sh

SRCS = Channel.cc \
	ChannelUser.cc \
	client.cc \
	iClient.cc \
	ip.cc \
	iServer.cc \
	main.cc \
	Network.cc \
	server.cc
OBJS = $(patsubst %.cc, %.o, $(SRCS))

all: gnuworld
everything: all
make: all

%.o: %.cc
	$(SHLIB_CXX) $(CXXFLAGS) -c $< -o $@

gnuworld: $(OBJS)
	$(SHLIB_CXX) $(CXXFLAGS) -o $(BIN_PATH)/GNUWorld $(OBJS) $(LIBS)

clean:
	$(RM) -f $(OBJS) $(BIN_PATH)/GNUWorld

distclean: clean

depend: $(SRCS)
	$(CXX) $(CXXFLAGS) -MM $(SRCS) >> Makefile

